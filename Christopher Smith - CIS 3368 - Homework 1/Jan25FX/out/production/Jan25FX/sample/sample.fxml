<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="center" prefWidth="532.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <VBox>
        <ListView fx:id="employeeListView" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="400.0" prefWidth="162.0" style="-fx-border-color: black;" />
        <Button fx:id="deleteButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="32.0" prefWidth="180.0" style="-fx-border-color: red; -fx-background-color: white;" text="delete selected" textFill="#ff0101" />
    </VBox>
    <VBox style="-fx-background-color: white;">
        <HBox>
            <Label prefWidth="100" text="First Name" />
            <TextField fx:id="firstNameTextField" prefWidth="150" />
        </HBox>
        <HBox>
            <Label prefWidth="100" text="Last Name" />
            <TextField fx:id="lastNameTextField" prefWidth="150" />
        </HBox>
        <HBox style="-fx-background-color: white;">
            <Label prefWidth="100" text="Is Active" />
            <CheckBox fx:id="isActiveCheckBox" />
        </HBox>
        <HBox>
            <Button fx:id="clearButton" prefWidth="75" style="-fx-border-color: black; -fx-background-color: white;" text="Clear" />
            <Button fx:id="addButton" prefWidth="75" style="-fx-border-color: black; -fx-background-color: white;" text="Add new" />
        </HBox>
    </VBox>
</HBox>
